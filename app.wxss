/**app.wxss**/

page {
  background: #f0eeee;
  font-family: "Helvetica Neue,Helvetica,Roboto,Segoe UI,Arial,sans-serif";
}
.loading{
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  background:#eee;
  position:fixed;top:0;left:0;z-index:99999;
}
.loading text{
  display: block;
  width:100%;
  color:#666;
  text-align: center;
  font-size: 33rpx;
  margin-top:20rpx;
}
.checkIn {
  width: 108rpx;
  height: 113rpx;
  position: fixed;
  bottom: 1%;
  right: 2%;
  z-index:99999;
}
.sumPrice{
  font-weight: bold;
}
.plh {
  color: #888;
  font-size: 30rpx;
}

.mask {
  width: 100%;
  background: #333;
  opacity: 0.5;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.del {
  width: 64rpx;
  height: 64rpx;
}

.productList {
  width: 100%;
  overflow: hidden;
  background: #fff;
}

.product {
  width: 97%;
  height:80px;
  margin: 0 auto;
  overflow: hidden;
  padding: 15rpx 0;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.product .plp {
  display: block;
  width: 480rpx;
  height: 150rpx;
  margin-right: 38rpx;
  overflow: hidden;
}

.product .plp image {
  width: 100%;
}

.product text.title {
  display: block;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
}

.pinfo {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
}

.pother {
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.pol{
    display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.pol image {
 width:40rpx;
 height: 40rpx;
 margin-right:10rpx;
}
.pol text {
  color: #888;
  font-size: 27rpx;
  margin-right: 10rpx;
  letter-spacing: 5rpx;
}

.por image {
 display: block;
 width:40rpx;
 height: 40rpx;
}

.address {
  display: flex;
  flex-flow: row wrap;
  align-items: flex-end;
}

.address image {
  width: 30rpx;
  height: 30rpx;
  margin-right:10rpx;
}

.address text {
  color: #999;
  font-size: 24rpx;
}

/*=================登陆提示框====================  */
.tipMask{
  opacity: 0.5;
  background:#333;
  overflow: hidden;
  position: fixed;top:0;left:0;z-index: 99998;
}
.tipLogin {
  width: 250px;
  height:210px;
  background: #fff;
  position: fixed;
  top: 0;
  left: 50%;
  z-index: 99999;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  border-radius: 5px;
}
.tipLogin view{
  width:100%;
  margin:20rpx 0;
  color: #333;
  text-align: center;
}
.tipLogin view image {
  display: block;
  width: 109px;
  height: 87px;
  margin:0 auto; 
}
.tipLogin button{
  width:50%;
  text-align: center;
  border: none;
  color:#fff;
  font-size: 32rpx;
  background: #ffc72a;
}
/*===================广告====================*/
.ad{
  width: 100%;
  margin-bottom:10rpx;
  background:#fff;
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  box-sizing: border-box;
}
.ad view{
  width: 50%;
  height:200rpx;
  overflow: hidden;
  padding:10rpx;
  box-sizing: border-box;
  margin-bottom: -1px;
  border-right:1px dashed #ddd;
  border-bottom:1px dashed #ddd;
}
.ad view:last-child{
border-right: 0;
}
.ad view image{
  width:100%;
  height: 100%;
}
.ad view text{
  display: block;
  width: 100%;
  color:#ffc72a;
  font-size: 32rpx;
  text-align: center;
  margin:25rpx 0;
}
/* 详情页返回首页 */
.backHome{
  width:32px;
  height:32px;
  position: fixed;top:28rpx;left:28rpx;
}
/* 技术支持 */
.support{
  width:100%;
  color:#777;
  margin:20rpx 0;
  font-size: 28rpx;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-content: center;
}
.support text{
  display: block;
  text-align: center;
}
.support text:first-child{
  width:100%;
}
.support text:last-child{
  margin-top:20rpx;
  padding:15rpx 25rpx;
  border-radius: 25rpx;
  border:1rpx solid #ffc72a;
}
