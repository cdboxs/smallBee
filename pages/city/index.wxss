/* pages/city/index.wxss */

page {
  background: #fff;
}

.plh {
  color: #666;
  font-size: 30rpx;
}

.search {
  width: 100%;
  height: 98rpx;
  background: #f3f2f2;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search view:nth-of-type(1) {
  width: 60rpx;
  height: 66rpx;
  background: #fff;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search view:nth-of-type(2) {
  width: 88%;
}

.search input {
  display: block;
  width: 100%;
  height: 66rpx;
  color: #666;
  font-size: 30rpx;
  background: #fff;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.search image {
  width: 32rpx;
  height: 32rpx;
}

.locationCity {
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
}

.locationCity image {
  width: 48rpx;
  height: 48rpx;
  margin: 0 10rpx;
}

.locationCity view:nth-of-type(1) {
  display: flex;
  color: #333333;
  font-size: 30rpx;
}

.cityList {
  width: 100%;
  overflow: hidden;
  background: #fff;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-content: center;
}

.cityList view {
  width: 90%;
  font-size: 30rpx;
}

.cityList view text {
  display: block;
  width: 100%;
  padding: 20rpx 0;
  color: #666;
  font-size: 26rpx;

}

.cityList view .cityKey{
  margin: 15rpx 0 0 0;
  border: none;
  color:#333333;
  font-size: 31rpx;
}
.cityList view .cityName {
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.cityList view .cityName text{
  color:#333333;
}
.cityList view .region{
  color:#999999;
  padding-left:3%;
   font-size: 30rpx;
  border-bottom: 1rpx solid #eee;
}