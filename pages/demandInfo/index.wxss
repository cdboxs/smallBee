}
.demandInfo view{
  padding:4%;
}
.demandPics{
  display: block;
  margin:0 auto;
}

.merchantTA{
  width: 100%;
  display: flex;
  padding:18rpx 0;
  align-items: center;
  font-size: 30rpx;
  background:#fff;
  position: relative;
}
.merchantTA image.time{
  width:32rpx;
  height:32rpx;
  padding:0 5px 0 8px;
}
.merchantTA image.position{
  width:33rpx;
  height:33rpx;
   padding:0 5px 0 8px;
