}
.title{
  width:96%;
  padding:4% 2%;
  line-height: 23px;
  font-size: 38rpx;
  background:#fff;
}
.time{
  width:96%;
  padding:2%;
  color:#888;
  font-size: 32rpx;
  background:#fff;
  border-bottom:1rpx solid #eee;
}
.userinfo{
  width:96%;
  height:66rpx;
  padding:2%;
