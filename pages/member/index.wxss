/* pages/member/index.wxss */

.userInfo {
  width: 100%;
  padding: 25rpx 0 50rpx 0;
  background: #ffc72a;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
}

.userInfo view {
  width: 100%;
  text-align: center;
  color: #fff;
}

.userInfo .userAvatarUrl {
  display: block;
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 3px solid #ddd;
}
.userInfo .userAvatarUrl image{
  display: block;
  width: 128rpx;
  height: 128rpx;
  overflow: hidden;
  
}

.userInfo .userNickName {
  margin-top: 20rpx;
}
.authorization{
  display: block;
  height:48rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 48rpx;
  padding:2rpx 20rpx;
  color:#fff;
  border:none;
  background:#09c12c;
}
.system {
  width: 100%;
  margin: 20rpx 0;
  overflow: hidden;
  background: #fff;
}

.system view {
  padding: 30rpx 5rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #fafafa;
}

.system view image {
  width: 48rpx;
  height: 48rpx;
}

.system view image:last-child {
  width: 32rpx;
  height: 32rpx;
}

.system view text {
  width: 80%;
  font-size: 32rpx;
  color: #333;
}
