/* pages/demand/index.wxss */
page{
  background: #fff;
}
.demandMenu{
  width:100%;
  height: 90rpx;
  background: #fff;
  display: inline-flex;
  flex-flow: row;
  justify-content:space-around;
  align-items: center;
  box-shadow: 0px 2px 10px 1px #fdfbfb;
}
.demandMenu text{
  display: block;
  width:50%;
  text-align: center;
  font-size: 30rpx;
  border-right: 1rpx solid #eee;
}
.demandMenu text:last-child{
  border-right:none;
}
.active{
  color:#7d330b;
}
.product{
  height:auto;
}
.checkInF{
  display: block;
  width:92%;
  margin:0 auto;
}
.checkInF view{
  padding:20rpx 0;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.checkInF view.times{
  padding:20rpx 0;
  display: flex;
  flex-flow: row;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.checkInF view label{
  font-size: 30rpx;
}
.checkInF view .tipx{
  color:red;
  font-size: 46rpx;
  position: absolute;top:23rpx;right:20rpx;
}
.checkInF view input{
  width:75%;
}
.checkInF view input,.checkInF view textarea{
  color: #555;
  font-size: 27rpx;
}
.checkInSend{
  color:#fff;
  background:#ffc72a;
  margin:36rpx 0;
}
.checkInF view.picAdd{
  width: 100%;
  border:none;
}
.checkInF view .addPic{
  display: block;
  width:128rpx;
  height: 128rpx;
  margin:10rpx;
}
.checkInF view picker{
   width:74%;
   margin:0;
}
.checkInF view picker input{
  display: block;
  width:100%;
  margin:0 10rpx;
  text-align: left;
}
.checkInF view textarea{
  box-sizing: border-box;
  padding:15rpx;
  height: 250rpx;
  line-height: 50rpx;
}
.address text{
  color:#565656;
  padding-left:10rpx;
}

.operation{
  width:35%;
  height:20px;
  font-size: 30rpx;
  overflow: hidden;
  position: absolute;bottom:0;right:0;
  display: flex;
  justify-content: space-between;
 align-items: center;
}
.operation text{
  display: block;
  color:red;
}

/* 协议 */
.Agreement{
 display: block;
  width:92%;
  margin:0 auto;
  font-size: 24rpx;
}
.Agreement view{
  padding: 0;
  border:0 none;
  color:#777;
}








