/* pages/pay/index.wxss */
page{
  background:#fff;
}
.pay image{
  display: block;
  width: 128px;
  height:128px;
  margin:50rpx auto;
}
.pay view{
  display: flex;
  flex-flow: row wrap;
  justify-content: center;

}
.pay view input{
  width: 90%;
  height:40px;
  color:#999;
  padding:0 56px;
  font-size: 46rpx;
  line-height: 40px;
  margin: 0 0 30rpx 0;
  background: #fefefe;
  border:1px solid #eee;
  box-sizing: border-box;
  position: relative;
   text-align: center;
  border-radius: 5px;
}
.pay view input image{
  width: 26px;
  height: 26px;
  padding:0 8px;
  border-right: 1px solid #ddd;
  position: absolute;top:-16px;left:0;z-index: 999;
}
.pay view input text{
 
  padding:0 8px;
  font-size: 36rpx;
 overflow: hidden;
  position: absolute;top:0px;right:15rpx;z-index: 999;
}
.pay button{
  width: 90%;
  height:40px;
  color:#fff;
  padding:0 56px;
  font-size: 46rpx;
  line-height: 40px;
  margin:10rpx auto;
  background: #ffc72a;
  border-radius: 5px;
}

.pay view picker{
  width: 90%;
  height:40px;
  color:#999;
  padding:0 56px;
  font-size: 46rpx;
  line-height: 40px;
  margin: 0 0 30rpx 0;
  background: #fefefe;
  border:1px solid #eee;
  box-sizing: border-box;
  position: relative;
  border-radius: 5px;
}
.pay view picker input{
  width: 100%;
  height:35px;
  color:#999;
  font-size: 46rpx;
  line-height: 40px;
  border:0 none;
}
.pay view picker image{
  width: 26px;
  height: 26px;
  padding:0 8px;
  border-right: 1px solid #ddd;
  position: absolute;top:-16px;left:0;z-index: 999;
}
.pay view picker text{
  width: 88rpx;
  height: 26px;
  padding:0 8px;
  font-size: 36rpx;
  font-weight: bold;
  position: absolute;top:0px;right:0;z-index: 999;
}